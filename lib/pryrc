# -*- coding: utf-8 -*-

Pry.config.pager = true
Pry.config.color = true
Pry.config.history.should_save = true

Pry.config.prompt = proc do |obj, nest_level, pry|
  prompt  = Pry::Helpers::Text.bright_black Pry.view_clip(obj)
  prompt += ":#{nest_level}" if nest_level > 0
  prompt += Pry::Helpers::Text.cyan ' » '
end, proc { Pry::Helpers::Text.cyan ' » '}

original_print = Pry.config.print
Pry.config.print = proc do |output, value|
  begin
    require 'awesome_print'
    output.puts value.ai
  rescue LoadError => err
    original_print.call(output, value)
  end
end
