#!/bin/bash -e

function gh() {
  local URL="https://$(git config remote.origin.url | sed 's/\.git//' | sed 's/https:\/\///' | sed 's/git:\/\///' | sed 's/git@//' | tr ':' '/')"

  case "$1" in
    i|issues|-i|--issues)
      URL="$URL/issues"
      ;;
    p|pulls|-p|--pulls)
      URL="$URL/pulls"
      ;;
    w|wiki|-w|--wiki)
      URL="$URL/wiki"
      ;;
  esac

  open "$URL"
}

gh "$@"
