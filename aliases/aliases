alias et='mate .' # Open current folder with textmate
alias eprof="mate ~/.dotfiles" # Edit these files
alias pubkey='cat ~/.ssh/*.pub | pbcopy && echo "Keys copied to clipboard"' # Copy pub keys to clipboard
alias ls='ls -laGF' # Compact view, show color
alias gi='sudo gem install --no-ri --no-rdoc' # Give root and force no documentation
alias hints='cat ~/.dotfiles/lib/hints.txt' # Show hints

# Source dotfiles
alias reload="source $DOTFILES/config"
alias sprof='reload'
alias sauce='reload'

alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'

# Go to textmate bundles folder
alias tmbundles='cd ~/Library/Application\ Support/TextMate/Bundles'

# Mac Helpers
alias show_hidden='defaults write com.apple.Finder AppleShowAllFiles YES && killall Finder'
alias hide_hidden='defaults write com.apple.Finder AppleShowAllFiles NO && killall Finder'

# Cucumber
alias cuke='cucumber --format pretty'

# https://github.com/ltw/oh-my-zsh/commit/5ae46606d964619b987b4a51b68cc82ee7a9db1d#diff-0
# Lucas Willett (@ltw_)
alias sw='saywhen'

function saywhen {
  if "$@"
  then
    say "$1 $2 done."
    return 0
  else
    say "$1 $2 error."
    return 1
  fi
}
