alias et='mate .'                             # Open current folder with textmate
alias eprof='mate ~/.dotfiles'                # Edit these files
alias ls='ls -laGF'                           # Compact view, show color
alias ..='cd ..'                              # Up one directory
alias ...='cd ../..'                          # Up two directories
alias wiki='vim -c VimwikiIndex'              # Open vimwiki
alias sw='saywhen'                            # Prepend to a command and it will say when complete
alias reload="source $DOTFILES/config"        # Source dotfiles
alias sauce='reload'                          # Meta alias!

# Copy pub keys to clipboard
alias pubkey='cat ~/.ssh/*.pub | pbcopy && echo "Keys copied to clipboard"'

source $DOTFILES/aliases/git                  # Git aliases
source $DOTFILES/aliases/rails                # Rails aliases
source $DOTFILES/aliases/testing              # Testing aliases
