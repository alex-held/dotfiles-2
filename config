# Aliases
source ~/.dotfiles/aliases/git      # Git aliases
source ~/.dotfiles/aliases/rails    # Rails aliases
source ~/.dotfiles/aliases/aliases  # Misc aliases

# Load bash config
# source ~/.dotfiles/bash/bashrc

# Search /Sites folder on 'cd' command
export CDPATH='.:~:~/Sites'

# Set textmate as default editor
export EDITOR='mate -w'  # -w is to wait for Textmate window to close

# For mysql commands
export PATH=$PATH:/usr/local/mysql/bin

# MOTD
uname -npsr
uptime # Length of time the machine has been running

# Random hint
fn=~/.dotfiles/lib/hints.txt
sed -n $(awk "END{ print $RANDOM%NR+1}" $fn)p $fn

echo $bg[green]'Custom config successfully loaded.'