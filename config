# Aliases
source ~/.dotfiles/aliases/git      # Git aliases
source ~/.dotfiles/aliases/rails    # Rails aliases
source ~/.dotfiles/aliases/aliases  # Misc aliases

# Exports
export CDPATH='.:~:~/Sites' # Search /Sites folder on 'cd' command
export EDITOR='mate -w' # Set textmate as default editor (-w is to wait for Textmate window to close)
export PATH=$PATH:/usr/local/mysql/bin # For mysql commands

# Load bash config
if [ $SHELL = "/bin/bash" ]; then
  source ~/.dotfiles/bash/bashrc
  echo 'bashrc successfully loaded.'
fi

source ~/.dotfiles/lib/motd # MOTD